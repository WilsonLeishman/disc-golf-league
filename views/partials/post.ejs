<% if(!user.hasPosted) { %>
  <section class="post">
    <form action="/post" method="post">
      <div class="row">
        <input id="post-score" type="text" name="score" placeholder="Score" autocomplete="off"/>
      </div>
      <div class="row">
        <input disabled class="button" id="post-submit" type="submit" value="Post Score"/>
      </div>
    </form>
  </section>
<% } %>
