<section class="summary">
  <div class="row name">
    <%- user.name %>
  </div>
  <div class="row">
    Course Average: <%- user.history.length==0 ? 'N/A' : (user.history.reduce(function(a, b){return a + b;})/user.history.length).toFixed(2); %>
  </div>
  <div class="row">
    <%- divisions[user.division] %> Division, Tag <%- user.position===undefined ? 'N/A' : '#'+(user.position+1); %>
  </div>
  <div class="row">
    <% var totalBadges = 0; %>
    <% ['ace','admin','record','top','par'].forEach(function(badge) { %>
      <% if(user.badges[badge] > 0){ %>
        <% totalBadges++; %>
        <span class="icon i-<%- badge %>"><%- user.badges[badge] %></span>
      <% } %>
    <% }); %>
    <% if(totalBadges === 0){ %>
      No Badges
    <% } %>
  </div>
</section>
